{% extends 'base.html.twig' %}

{% block title %}Todos{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Todos</h1>

        <form method="post" class="mb-3"  action="{{ path('todo_create')}}">
            <div class="input-group">
                <input type="text" name="description" class="form-control" placeholder="What needs to be done?" required>
                <button class="btn btn-primary">Add</button>
            </div>
        </form>

        <ul class="list-group">
            {% for todo in todos %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    {{ todo.getDescription() }}
                    <form method="post" action="{{ path('todo_delete', {'id': todo.getId()}) }}">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
